<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Playwright Test Suite" verbose="1">
    <listeners>
        <listener class-name="com.testautomation.listeners.TestListener"/>
        <listener class-name="com.testautomation.listeners.ExtentReportListener"/>
    </listeners>
    
    <test name="Landing Page Tests">
        <classes>
            <class name="com.testautomation.tests.LandingPageTest"/>
        </classes>
    </test>
    
    <test name="Login Page Tests">
        <classes>
            <class name="com.testautomation.tests.LoginPageTest"/>
        </classes>
    </test>
    
    <test name="Dashboard Page Tests">
        <classes>
            <class name="com.testautomation.tests.DashboardPageTest"/>
        </classes>
    </test>
    
    <test name="End-to-End Tests">
        <classes>
            <class name="com.testautomation.tests.E2ETest"/>
        </classes>
    </test>
</suite>
